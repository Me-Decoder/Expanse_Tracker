<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddTransectionActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back Icon -->
    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/icon_back"
        app:layout_constraintTop_toTopOf="@id/imageView3"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Heading -->
    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Transaction"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title -->
    <EditText
        android:id="@+id/edt_Title"
        android:singleLine="true"
        android:maxLines="1"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Title"
        android:background="@drawable/etxt_round"
        android:drawableStart="@drawable/book"
        android:drawablePadding="12dp"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Amount -->
    <EditText
        android:id="@+id/edt_Amount"
        android:layout_width="0dp"
        android:singleLine="true"
        android:maxLines="1"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Amount"
        android:background="@drawable/etxt_round"
        android:drawableStart="@drawable/icon_dollarbag"
        android:drawablePadding="12dp"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/edt_Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Date -->
    <EditText
        android:id="@+id/edt_Date"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Date"
        android:focusable="false"
        android:clickable="true"
        android:background="@drawable/etxt_round"
        android:drawableStart="@drawable/icon_date"
        android:drawablePadding="12dp"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/edt_Amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Category Input (Optional) -->
    <EditText
        android:id="@+id/edt_category"
        android:singleLine="true"
        android:maxLines="1"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Income/Expance"
        android:background="@drawable/etxt_round"
        android:drawableStart="@drawable/icon_category"
        android:drawablePadding="12dp"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/edt_Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Category Selector Label -->
    <TextView
        android:id="@+id/tvIconSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Category"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/edt_category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Flexbox Category Layout -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/categoryLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:flexWrap="wrap"
        app:justifyContent="center"
        app:layout_constraintTop_toBottomOf="@id/tvIconSelector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp">

        <!-- Category Card: Food -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_food"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="30dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/lightGray"
            app:cardBackgroundColor="@android:color/white"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_food" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_travel"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="30dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/lightGray"
            app:cardBackgroundColor="@android:color/white"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_travel" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_bill"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="30dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/lightGray"
            app:cardBackgroundColor="@android:color/white"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_bill" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_rent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="30dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/lightGray"
            app:cardBackgroundColor="@android:color/white"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_rent" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_shopping"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="30dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/lightGray"
            app:cardBackgroundColor="@android:color/white"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_shopping" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_other"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="30dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/lightGray"
            app:cardBackgroundColor="@android:color/white"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_other" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Add more categories below (Travel, Rent, etc.) -->

    </com.google.android.flexbox.FlexboxLayout>

    <!-- Add Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_transaction"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:text="Add"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:backgroundTint="@color/orange"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/categoryLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
